<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/page_margins"
        android:layout_marginBottom="@dimen/page_margins"
        android:layout_marginStart="@dimen/page_margins"
        android:layout_marginEnd="@dimen/page_margins"/>

    <TextView
        android:id="@+id/caption_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/gray"
        android:textSize="12sp" />
</FrameLayout>