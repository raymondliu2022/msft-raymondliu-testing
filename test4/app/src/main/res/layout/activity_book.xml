<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_text_view"

        android:layout_marginTop="@dimen/page_margins"
        android:layout_marginBottom="@dimen/page_margins"
        android:layout_marginStart="@dimen/page_margins"
        android:layout_marginEnd="@dimen/page_margins"/>

    <ViewStub
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager_stub"
        android:inflatedId="@+id/view_pager_view"
        android:layout="@layout/view_pager_2"/>
</FrameLayout>